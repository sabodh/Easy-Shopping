<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ShoppingList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ShoppingList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ShoppingList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BlackText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="BlackText.Normal" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="BlackText.MidLevel">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="BlackText.MinLevel">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="BlackText.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="BlackText.Large" parent="@android:style/TextAppearance">
        <item name="android:starStyle">@style/BlackText</item>
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:textSize">22dp</item>
    </style>

</resources>